@inject IViewLocalizer localizer
 @model List<CustomerDto> 

<div class="table-responsive m-1">
<table class="table table-dark ">
    
  <thead> 
      <th>@localizer["Name"]</th>
      @*<th>Name_English</th>*@
        <th>@localizer["Address"]</th>
        <th>@localizer["Email"]</th>
     @*   <th>FullNamed</th>*@
        <th>@localizer["Mobile Number"]</th>
        <th>Restore</th>
         
  </thead>
  <tbody>
      @foreach(var itm in Model){
    <tr class="table-active">
    <td>@itm.FullName</td>
      @*<td>@itm.NameEN</td>*@
      <td>@itm.Address</td>
      <td>@itm.Email</td>
      @*<td>@itm.FullName</td>*@
      <td>@itm.MobileNumber</td>
                    <td><a class="btn text-white" style="background-color:#0d6efd" asp-controller="Customer" asp-action="Restore" asp-route-ID="@itm.ID">Restore</a></td>
                   
           

     </tr>
     }
    
  </tbody>
</table>
<div/>
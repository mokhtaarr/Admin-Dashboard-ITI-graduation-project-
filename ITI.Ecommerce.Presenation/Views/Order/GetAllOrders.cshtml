@model List<OrderDto>
@inject IViewLocalizer localizer
<h1 style="color:#0d6efd"> @localizer["All Orders"]</h1>
@*<a class="btn btn-primary" asp-controller="Order" asp-action="Add">Add New Order</a>*@
<table class="table table-striped table-dark table-responsive m-1">
    <thead>
        <tr>
            <th scope="col">@localizer["Customer"]</th>
            <th scope="col">@localizer["Payment ID"]</th>
            <th scope="col">@localizer["Order Date"]</th>
            <th scope="col">@localizer["Shopping Cart ID"]</th>
            <th scope="col">@localizer["Update"]</th>
            <th scope="col">@localizer["Delete"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerId</td>
                <td>@order.PaymentId</td>
                <td>@order.OrderDate</td>
                <td>@order.ShoppingCartId</td>
                <td>
                    <a class="btn text-white" style="background-color:#0d6efd" asp-controller="Order" asp-action="Update" asp-route-id="@order.ID">@localizer["Update"]</a>
                </td>
                <td><a class="btn btn-danger" asp-controller="Order" asp-action="Delete" asp-route-id="@order.ID">@localizer["Delete"]</a></td>
            </tr>
        }
    </tbody>
</table>